extends layout

block main 
  h1 Sign Up

  form(action="/signup", method="post") 
    label(for="username") Username: 
    input#username(type="text", name="username", required) 

    label(for="password") Password: 
    input#password(type="password", name="password", required)

    .show-password 
      input#show-password-checkbox(type="checkbox", name="")
      label(for="show-password-checkbox") Show password 

    label(for="confirm-password") Confirm Password:
    input#confirm-password(type="password", name="confirmPassword", required)

    .show-password 
      input#show-confirm-password-checkbox(type="checkbox", name="")
      label(for="show-confirm-password-checkbox") Show password

    input.btn.login(type="submit", value="Sign Up")

    script. 
      const confirmPasswordInput = document.getElementById("confirm-password");
      const showConfirmPasswordCheckbox = document.getElementById("show-confirm-password-checkbox");

      showConfirmPasswordCheckbox.addEventListener("change", () => {
        if (showConfirmPasswordCheckbox.checked) {
          confirmPasswordInput.type = "text";
        } else {
          confirmPasswordInput.type = "password";
        }
      });
