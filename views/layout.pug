doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}

    link(rel="stylesheet", href="style.css")
  body 
  .container 
    if messages.error
      .flash-message.error
        p= messages.error
        
    if messages.success
      .flash-message.success
        p= messages.success

    block main

  script(src="script.js") 